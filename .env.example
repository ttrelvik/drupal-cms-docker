# Copy this file to .env and fill in your own values

# Database credentials (for PostgreSQL container)
POSTGRES_DB=drupal
POSTGRES_USER=drupal
POSTGRES_PASSWORD=your_secure_password_here

# Database credentials (for Drupal - same values, different names)
DB_HOST=db
DB_NAME=drupal
DB_USER=drupal
DB_PASSWORD=your_secure_password_here

# Drupal configuration
DOMAIN=yourdomain.com
# See settings.local.php and docker-compose.yml for usage of 
# ADDITIONAL_TRUSTED_HOSTS and REDIRECT_HOSTNAME
ADDITIONAL_TRUSTED_HOSTS=alias.yourdomain.com,alias2.yourdomain.com
REDIRECT_HOSTNAME=alias.yourdomain.com
TRUSTED_PROXY_CIDR=10.0.0.0/16